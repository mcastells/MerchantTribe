<script type="text/javascript">
    $(function () {
        $(document).bind('fbload', function () {
            FB.Event.subscribe('edge.create', function (res) {
                // show the msg saying that they'll get laser viewers
                 $('#like-msg').slideDown('fast');
            });
        });
    });
</script>

<h1>
    Thank You!</h1>
