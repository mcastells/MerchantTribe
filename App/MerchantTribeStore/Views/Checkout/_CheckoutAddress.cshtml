@model MerchantTribeStore.Models.CheckoutAddressViewModel
<div class="form-section">
    <label>
        Country</label>
    <select id="@(Model.Prefix + "countryname")" name="@(Model.Prefix + "countryname")" tabindex="@(Model.TabIndex + 1)">
        @foreach (var c in Model.Countries)
        {
            if (Model.Address.CountryBvin == c.Bvin)
            {
            <option value="@c.Bvin" selected="selected">@c.DisplayName</option>      
            }
            else
            {
            <option value="@c.Bvin">@c.DisplayName</option>      
            }
        }
    </select>
</div>

<div class="form-section">

    <div class="first-name">
        <label>
            First name</label>
        <input type="text" id="@(Model.Prefix + "firstname")" name="@(Model.Prefix + "firstname")"
                                        tabindex="@(Model.TabIndex + 2)"
                                        value="@Model.Address.FirstName"
                                        class="@Model.IsErr("firstname") forminput medium" />
    </div>

    <div class="last-name">
        <label>
            Last name</label>
        <input type="text" id="@(Model.Prefix + "lastname")" name="@(Model.Prefix + "lastname")"
                                        tabindex="@(Model.TabIndex + 3)"
                                        value="@Model.Address.LastName"
                                        class="@Model.IsErr("lastname") forminput medium" />
    </div>
    <div class="clear"></div>
</div>

