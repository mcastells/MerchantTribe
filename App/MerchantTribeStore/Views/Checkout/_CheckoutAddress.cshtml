<div class="form-section">
    <label>
        Address</label>
    <input type="text" id="@(Model.Prefix + "address")" name="@(Model.Prefix + "address")"
                                       tabindex="@(Model.TabIndex + 5)"
                                       value="@Model.Address.Line1"
                                       class="@Model.IsErr("address") forminput" />
</div>

<div class="form-section">
    <label>
        City</label>
    <input type="text" id="@(Model.Prefix + "city")" name="@(Model.Prefix + "city")"
                                        tabindex="@(Model.TabIndex + 6)" 
                                        value="@Model.Address.City"
                                        class="@Model.IsErr("city") forminput" />
</div>

<div class="form-section">
    <label>
        State</label>
    <select id="@(Model.Prefix + "state")" name="@(Model.Prefix + "state")" tabindex="@(Model.TabIndex + 7)">
    </select>
</div>

<div class="form-section">
    <label>
        Zip code</label>
    <input type="text" id="@(Model.Prefix + "zip")" name="@(Model.Prefix + "zip")" 
                                        tabindex="@(Model.TabIndex + 8)"                                        
                                        value="@Model.Address.PostalCode" 
                                        class="@Model.IsErr("zip") forminput short" />
</div>

<div class="form-section">
    <label>
        Phone</label>
    <input type="text" id="@(Model.Prefix + "phone")" name="@(Model.Prefix + "phone")" 
                                        value="@Model.Address.Phone"
                                        tabindex="@(Model.TabIndex + 9)"
                                        class="@Model.IsErr("phone") forminput" />
</div>

<input type="hidden" id="@(Model.Prefix + "addressbvin")" name="@(Model.Prefix + "addressbvin")" value="@Model.Address.Bvin" />